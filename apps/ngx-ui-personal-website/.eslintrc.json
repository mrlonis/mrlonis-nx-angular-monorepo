{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "apps/ngx-ui-personal-website/src/assets/old-git-repo/**/*"],
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": [
          "apps/ngx-ui-personal-website/tsconfig.app.json",
          "apps/ngx-ui-personal-website/tsconfig.editor.json",
          "apps/ngx-ui-personal-website/tsconfig.json",
          "apps/ngx-ui-personal-website/tsconfig.spec.json"
        ]
      }
    }
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": [
          "apps/ngx-ui-personal-website/tsconfig.app.json",
          "apps/ngx-ui-personal-website/tsconfig.editor.json",
          "apps/ngx-ui-personal-website/tsconfig.json",
          "apps/ngx-ui-personal-website/tsconfig.spec.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@nx/angular",
        "plugin:@angular-eslint/template/process-inline-templates",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "mrlonis",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "mrlonis",
            "style": "kebab-case"
          }
        ],
        "prettier/prettier": [
          "error",
          {
            "singleQuote": true,
            "printWidth": 120,
            "tabWidth": 2
          }
        ]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@nx/angular-template", "plugin:prettier/recommended"],
      "rules": {}
    }
  ]
}
