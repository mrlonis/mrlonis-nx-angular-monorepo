{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": [
          "libs/mrlonis-nx-plugin/tsconfig.json",
          "libs/mrlonis-nx-plugin/tsconfig.lib.json",
          "libs/mrlonis-nx-plugin/tsconfig.spec.json"
        ]
      }
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": [
          "libs/mrlonis-nx-plugin/tsconfig.json",
          "libs/mrlonis-nx-plugin/tsconfig.lib.json",
          "libs/mrlonis-nx-plugin/tsconfig.spec.json"
        ],
        "createDefaultProgram": true
      },
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["./package.json", "./generators.json", "./executors.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nrwl/nx/nx-plugin-checks": "error"
      }
    }
  ]
}
