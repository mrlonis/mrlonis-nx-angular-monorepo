{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": [
          "libs/buildable-typescript-library/tsconfig.json",
          "libs/buildable-typescript-library/tsconfig.lib.json",
          "libs/buildable-typescript-library/tsconfig.spec.json"
        ]
      }
    }
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": [
          "libs/buildable-typescript-library/tsconfig.json",
          "libs/buildable-typescript-library/tsconfig.lib.json",
          "libs/buildable-typescript-library/tsconfig.spec.json"
        ],
        "createDefaultProgram": true
      },
      "rules": {}
    }
  ]
}
