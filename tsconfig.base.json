      "@mrlonis/ngx-table-virtual-scroll": ["libs/ngx-table-virtual-scroll/src/index.ts"],
      "@mrlonis/ngx-workspace": ["libs/ngx-workspace/src/index.ts"],
      "@mrlonis/ngx-workspace-karma": ["libs/ngx-workspace-karma/src/index.ts"],
      "@mrlonis/nx-angular-tutorial-data": ["libs/nx-angular-tutorial-data/src/index.ts"],
      "@mrlonis/nx-angular-tutorial-ui": ["libs/nx-angular-tutorial-ui/src/index.ts"],
      "@mrlonis/nx-nextjs-tutorial-lib": ["libs/nx-nextjs-tutorial-lib/src/index.ts"],
